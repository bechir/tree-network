<ul class="list-unstyled">
    {% for user in users %}
        <li>
            <a class="d-block py-1 my-2 mx-2 text-info btn-link border-bottom" href="{{ path('user_show', {usernameCanonical: user.usernameCanonical}) }}">
                <img class="img-33 img-circle" src="{{ user.avatar ? vich_uploader_asset(user.avatar, 'avatarFile') : asset('img/user/default-avatar-profile.jpg') }}">
                {{ user.fullname }} ({{ user.username }})
            </a>
        </li>
    {% else %}
        <li class="mx-3 mt-3">Aucun r√©sultat</li>
    {% endfor %}
</ul>
