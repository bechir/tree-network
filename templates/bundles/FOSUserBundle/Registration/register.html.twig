{% extends 'base.html.twig' %}
{% block title %}{{ 'user.create_account'|trans }}{% endblock %}

{% block main %}
<!-- Content area start -->
<!-- Content bg area start -->
<div class="contact-bg overview-bgi">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Form content box start -->
                <div class="form-content-box">
                    <!-- logo -->
                        <a href="{{ path('index') }}" class="logo">
                            <span class="last">{{ website.name }}</span>
                        </a>
                        <!-- details -->
                        <div class="details">
                            <h3>{{ 'user.create_account'|trans }}</h3>
                            <!-- Form start-->
                            {{ form_start(form) }}
                                {% if not form.vars.valid %}
                                    {% for children in form.children %}
                                        {% if not children.vars.valid %}
                                            <div class="alert alert-danger">
                                                {% if children.first is defined %}
                                                    {{ form_errors(children.first) }}
                                                {% else %}
                                                    {{ form_errors(children) }}
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                                <div class="form-group"></div>
                                <div class="form-group">
                                {{ form_widget(form.username, {'attr': {'placeholder': 'form.username', 'class': 'input-text'}}) }}
                                </div>
                                <div class="form-group">
                                {{ form_widget(form.email, {'attr': {'placeholder': 'form.email', 'class': 'input-text'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'form.password', 'class': 'input-text'}}) }}
                                </div>
                                <div class="form-group">
                                {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'form.password_confirmation', 'class': 'input-text'}}) }}
                                </div>
                                <div class="mb-0">
                                    <button type="submit" class="btn-md btn-theme btn-lg btn-block">{{ 'user.sign_up'|trans }}</button>
                                </div>
                            {{ form_end(form) }}
                            <!-- Form end-->
                        </div>
                        <!-- Footer -->
                        <div class="footer">
                        <a class="pull-left" href="{{ path('index') }}"><span>Retourner &agrave; l'accueil</span></a>
                        <span>
                                {{ 'user.already_member'|trans({'%link%': path('fos_user_security_login')})|raw }}
                            </span>
                        </div>
                </div>
                <!-- Form content box end -->
            </div>
        </div>
    </div>
</div>
<!-- Content bg area end -->
<!-- Content area end -->
{% endblock %}






<form class="border border-light p-5">

    <p class="h4 mb-4 text-center">Sign in</p>

    <input type="email" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="E-mail">

    <input type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Password">

    <div class="d-flex justify-content-between">
        <div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
            </div>
        </div>
        <div>
            <a href="">Forgot password?</a>
        </div>
    </div>

    <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>

    <div class="text-center">
        <p>Not a member?
            <a href="">Register</a>
        </p>

        <p>or sign in with:</p>
        <a type="button" class="light-blue-text mx-2">
            <i class="fab fa-facebook-f"></i>
        </a>
        <a type="button" class="light-blue-text mx-2">
            <i class="fab fa-twitter"></i>
        </a>
        <a type="button" class="light-blue-text mx-2">
            <i class="fab fa-linkedin-in"></i>
        </a>
        <a type="button" class="light-blue-text mx-2">
            <i class="fab fa-github"></i>
        </a>
    </div>
</form>