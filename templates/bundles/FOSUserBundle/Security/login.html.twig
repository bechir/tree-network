{% extends 'base.html.twig' %}
{% block title %}{{ 'user.sign_in_to_account'|trans }}{% endblock %}

{% block main %}
<!-- Content area start -->
<div class="contact-bg overview-bgi">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Form content box start -->
                <div class="form-content-box">
                    <!-- logo -->
                    <a href="{{ path('index') }}" class="clearfix alpha-logo logo">
                          {# <img src="{{ asset('img/logo/logo.png') }}" alt="white-logo"> #}
                        <span class="last">{{ website.name }}</span>
                    </a>
                    <!-- details -->
                    <div class="details">
                        <h3>{{ 'user.sign_in_to_account'|trans }}</h3>
                        <!-- Form start -->
                          {% if error %}
                          <div class="alert alert-danger">
                              {{ error.messageKey|trans(error.messageData, 'security') }}
                          </div>
                          {% endif %}
                          <form action="{{ path("fos_user_security_check") }}" method="post">
                              {% if csrf_token %}
                                  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                              {% endif %}

                              <div class="input-group">
                                <label for="username">{{ 'user.username_email'|trans }}</label>
                                <input type="text" id="username" class="input-text" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                              </div>
                              <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" id="password" class="input-text" name="_password" required="required" autocomplete="current-password" />
                              </div>
                              <div class="checkbox">
                                <div class="ez-checkbox pull-left">
                                  <label>
                                    <input type="checkbox" name="_remember_me" class="ez-hide">
                                    {{ 'user.remember_me'|trans }}
                                  </label>
                                </div>
                                <a href="{{ path('fos_user_resetting_request') }}" class="link-not-important pull-right">{{ 'user.forgot_password'|trans }}</a>
                                <div class="clearfix"></div>
                              </div>
                              <div class="mb-0">
                                <input type="submit" id="_submit" class="btn btn-theme btn-block btn-lg" name="_submit" value="Connexion" />
                              </div>
                            </form>
                        <!-- Form end -->
                    </div>
                    <!-- Footer -->
                    <div class="footer">
                      <a class="pull-left" href="{{ path('index') }}"><span>Retourner &agrave; l'accueil</span></a>
                        <span>
                            {{ 'user.dont_have_account'|trans({"%link%": path('fos_user_registration_register')})|raw }}
                        </span>
                    </div>
                </div>
                <!-- Form content box end -->
            </div>
        </div>
    </div>
</div>
<!-- Content area end -->
{% endblock %}
